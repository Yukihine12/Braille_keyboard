<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:ignore="SpeakableTextPresentCheck">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Alphabet Image in Center Top -->
        <ImageView
            android:id="@+id/alphabet"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/alphabet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/abjad"
            android:layout_width="800dp"
            android:layout_height="420dp"
            android:src="@drawable/alfabet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alphabet"
            tools:ignore="ContentDescription" />

        <!-- Main Text in Center -->

        <ImageView
            android:id="@+id/number"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="64dp"
            android:paddingTop="40dp"
            android:src="@drawable/numbers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/abjad"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/alpabetnumber"
            android:layout_width="650dp"
            android:layout_height="190dp"
            android:src="@drawable/alfabetnumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/punctuation"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:src="@drawable/punctuation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alpabetnumber"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/alpabetpunctuation"
            android:layout_width="400dp"
            android:layout_height="600dp"
            android:src="@drawable/alfabetpunctuation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/punctuation"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
